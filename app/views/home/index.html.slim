          h4 Extra Healthy
          = link_to image_tag( "/assets/beedPadSew.jpg"), '/category/display_category/4'
          h4 Savory
          = link_to image_tag( "/assets/beedPadSew.jpg"), '/category/display_category/3'
          h4 Vegetarian
          = link_to image_tag( "/assets/beedPadSew.jpg"), '/category/display_category/1'
              
              
        
          
          
          
          
